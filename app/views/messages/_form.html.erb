<div class="form-horizontal">
  <%= form_for(@message) do |f| %>
    <div class="form-group">
      <label for="message_name" class="col-sm-2 control-label">名前:</label>
      <div class="col-sm-10">
        <%= f.text_area :name, :size => "20x1", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="message_body" class="col-sm-2 control-label">内容:</label>
      <div class="col-sm-10">
        <%= f.text_area :body, :size => "20x6", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="message_age" class="col-sm-2 control-label">年齢:</label>
      <div class="col-sm-10">
        <%= f.text_area :age, :size => "10x1", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit("登録する", :class => "btn btn-sm btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
